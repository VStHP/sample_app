<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("shared._micropost_form.placeholder") %>
  </div>
  <%= f.submit t("shared._micropost_form.post"), class: "btn btn-primary" %>
  <span class="picture">
    <%= f.file_field :picture, accept: Settings.views.shared._micropost_form.accept %>
  </span>
<% end %>
