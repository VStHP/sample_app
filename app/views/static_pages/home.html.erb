<% provide :title, t(".title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "static_pages.home.hello" %></h1>
    <h2>
      <%= t "static_pages.home.intro" %>
      <a href="http://www.railstutorial.org/"><%= t "static_pages.home.link" %></a>
      <%= t "static_pages.home.outtro" %>
    </h2>
    <%= link_to t("static_pages.home.signup"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: t("static_pages.home.altlogo")),
   "http://rubyonrails.org/" %>
  <%= image_tag("kitten.png", alt: t("static_pages.home.altkitten")) %>
<% end %>
